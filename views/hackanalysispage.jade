    table.outtable
      tr
        td
          table.center
            tr(style='color:white;background-color:grey')
              th(width="8%") date
              th(width="6%") time
              th(width="12%") srcIP
              th(width="12%") dstIP
              th(width="4%") proto
              th(width="8%") csMethod
              th(width="30%") page
              th param
              th(width="6%") status
      tr
        td
          .outcenter
            table.center(border='1')
              tr
                td(width="8%")
                td(width="6%")
                td(width="12%")
                td(width="12%")
                td(width="4%")
                td(width="8%")
                td(width="30%")
                td(word-break="break-all")
                td(width="6%")
                each logs in data
                  tr
                   each log in logs
                     td #{log}

